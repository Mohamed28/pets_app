<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.dogs.info_dogs"
    android:background="#FFFFFF"
    android:id="@+id/scrollView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacinação dos cães"
        android:textStyle="bold"
        android:textSize="36sp"
        android:layout_margin="20dp"
        android:textColor="#000000"/>

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:src="@drawable/vacinacao_caes01"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Graças à conscientização sobre a importância da vacinação para cães — e também às campanhas que promovem vacina para cachorro gratuita — hoje em dia, a raiva em humanos foi praticamente erradicada no Brasil. É fundamental administrar a vacina antirrábica nos pets, para garantir que ela continue sendo rara. Normalmente, a primeira dose é administrada após a 12ª semana de vida do pet, e é necessário vacinar o cachorro todo ano para garantir sua eficácia."
        android:textSize="16dp"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:background="#FFFFFF"/>

</LinearLayout>